@require 'settings/palette.styl'

.connector-list
    display          flex
    flex-wrap        wrap
    justify-content  flex-start
    margin           0 -.7em 2em
    list-style       none

ul.connector-list
    margin-top       60px
    padding          0 20px

// We differenciate the "real" margin from the "used" margin. The "used" margin
// allow to use a little higher value for flex-basis calculation. Firefox
// and Chrome are behaving well but IE11 need it.
$item-real-margin = .7em
$item-margin = .8em

.item-wrapper
    flex             1 1 'calc(100% - %s * 2)' % $item-margin
    position         relative
    box-sizing       border-box
    border-radius    4px
    background-color white
    border           1px solid alpha(black, .15)
    margin           $item-real-margin
    padding-bottom   2.5em
    cursor           pointer
    text-decoration  none
    text-align       center
    transition       .2s ease all
    &:hover
        box-shadow 0 4px 12px 0 alpha(black, .15)
        transform  scale(1.05)
        transition .2s ease all
    .item-header
        position      relative
        border-radius 4px 4px 0 0
        height        6em
        background    white
        .item-icon
            position      relative
            display       block
            max-width         10em
            max-height        4.8em
            margin        0 auto
            top           55%
            transform     translateY(-50%)
    .item-title
        padding     0 .5em
        margin      .5em
        color       black
        font-size   1.25rem
        font-weight 700
    .item-subtitle
        font-size       14px
        padding         0 3em
        width           100%
        overflow        hidden
        margin          0
        color           coolGrey
        box-sizing      border-box
        position        absolute
        text-overflow   ellipsis
        white-space     nowrap
    .item-status-icon,
    .item-count
        position absolute
        width    24px
        height   24px
        bottom   1em
        right    1em
    .item-count
        border-radius 100%
        color   dodgerBlue
        font-weight 900
        background rgba(41, 126, 242, .1)
        line-height 24px

.col-voting-item
    border      2px dashed alpha(black, .15)
    padding-bottom .5em
    &:hover
        box-shadow  none
    .item-title
        font-size   1em
        font-weight 500

// Dedicated for IE 11 which seems not to take the default 100% into account.
@media (min-width: 1em)
    .item-wrapper
        flex-grow  0
        flex-basis 'calc(50% - %s * 2)' % $item-margin

@media (max-width: 43em)
    .item-wrapper
        padding .5em .5em 2.5em
        .item-header
            height        4em
            background    white
            .item-icon
                max-width         8em
                max-height        2em
        .item-title
            padding     .25em .5em
            margin      .5em
            font-size   1rem
            font-weight normal

@media (min-width: 43em)
    .use-case-dialog
        min-width 32em

    .use-case-dialog
        .item-wrapper
            flex-basis 'calc(50% - %s * 2)' % $item-margin

@media (min-width: 50em)
    .item-wrapper
        flex-basis 'calc(33.333% - %s * 2)' % $item-margin

@media (min-width: 60em)
    .use-case-dialog
        min-width 48em

    .use-case-dialog
        .item-wrapper
            flex-basis 'calc(33.33% - %s * 2)' % $item-margin

@media (min-width: 80em)
    .item-wrapper
        flex-basis 'calc(25% - %s * 2)' % $item-margin

    .use-case-dialog
        min-width 64em

    .use-case-dialog
        .item-wrapper
            flex-basis 'calc(25% - %s * 2)' % $item-margin

@media (min-width: 96em)
    .item-wrapper
        flex-basis 'calc(25% - %s * 2)' % $item-margin

        .item-header
            height  9em
            .item-icon
                max-width   14em
                max-height  4em

@media (min-width: 108em)
    .use-case-dialog
        min-width 88em

    .use-case-dialog
        .item-wrapper
            flex-basis 'calc(20% - %s * 2)' % $item-margin

@media (min-width: 112em)
    .item-wrapper
        flex-basis 'calc(20% - %s * 2)' % $item-margin

@media (min-width: 128em)
    .item-wrapper
        flex-basis 'calc(16.666% - %s * 2)' % $item-margin
