@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'

appTileSize = 6rem
serviceTileSize = 5rem
mobileTileSize = 4rem
outsideBorder = 0 0 0 1px rgba(0, 0, 0, .08)
lightShadow = 0 4px 12px 0 rgba(0, 0, 0, .08)
heavyShadow = 0 4px 24px 0 rgba(50, 54, 63, .08)

.app-list
    position relative
    margin-top -(appTileSize / 2)
    display grid
    grid-template-columns repeat(auto-fit, appTileSize)
    grid-auto-rows appTileSize
    grid-gap rem(8)
    justify-content center

    +tiny-screen()
        margin-top -(mobileTileSize / 2)
        grid-template-columns repeat(auto-fit, mobileTileSize)
        grid-auto-rows mobileTileSize
        grid-gap rem(4)

    .item
        background-color var(--white)
        box-shadow outsideBorder, lightShadow
        padding 20px 4px 12px
        transition box-shadow .05s ease, transform .05s ease

        &:active
        &:focus
            background-color var(--paleGrey)
            box-shadow outsideBorder, lightShadow, heavyShadow

        &:hover
            transform scale(1.05)
            box-shadow outsideBorder, lightShadow, heavyShadow

        @media (pointer coarse)
            &:hover
                transform none

        +tiny-screen()
            padding 10px 4px 6px

    .item-icon
            width rem(40)
            height rem(40)

            +tiny-screen()
                width rem(32)
                height rem(32)


.services-list
    width 100%
    max-width 'calc(%s * 7 + 16px * 6)' % serviceTileSize // 7 columns + 6 column gaps@
    margin auto
    margin-top rem(48)
    display grid
    grid-template-columns repeat(auto-fit, serviceTileSize)
    grid-auto-rows serviceTileSize
    grid-gap rem(16)
    justify-content center

    +tiny-screen()
        margin-top rem(24)
        grid-template-columns repeat(auto-fit, mobileTileSize)
        grid-auto-rows mobileTileSize
        grid-gap rem(2)

    .item
        padding 12px 8px
        border-radius 8px
        border-width 1px
        border-style solid
        border-color transparent

        &:hover
            border-color rgba(0, 0, 0, .1)

        &:active
        &:focus
            background-color var(--paleGrey)
            border-color rgba(0, 0, 0, .08)

        @media (pointer coarse)
            &:hover
                transform none

        +tiny-screen()
                padding 12px 4px

    .item--maintenance .item-icon
            filter grayscale(1)
            opacity .64

    .item--ghost
            background var(--zircon)
            border dashed 1px var(--primaryColorLightest)

            .item-icon
                filter sepia(1) hue-rotate(-180deg)

            &:hover
                border-color: var(--primaryColorLighter)

    .item-icon
        width rem(32)
        height rem(32)
        position relative

        +tiny-screen()
            width rem(24)
            height rem(24)

    .item-status
        position absolute
        bottom -6px
        right -6px
        border 2px solid var(--white)
        border-radius 50%
        background var(--white)

    .item--add-service
        .item-icon
            box-sizing border-box
            display flex
            justify-content center
            align-items center
            background var(--zircon)
            border dashed 1px var(--primaryColorLightest)
            border-radius 4px

        &[aria-busy]
            opacity .8

        &[aria-busy]:hover
            transform none

        &:hover
            background: var(--zircon)
            border dashed 1px var(--primaryColorLightest)

            .item-icon
                background none
                border 0

.item
    box-sizing border-box
    border-radius rem(8)
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    flex-shrink 0
    cursor pointer
    text-decoration none
    text-align center

.item-icon
        margin-bottom rem(8)

        +tiny-screen()
            margin-bottom rem(4)

.item-title
        width 80%
        margin 0
        color var(--charcoalGrey)
        font-size .875rem
        font-weight normal
        line-height 1
        white-space nowrap
        overflow hidden
        text-overflow ellipsis

        +tiny-screen()
            font-size .625rem
            line-height 1.2
