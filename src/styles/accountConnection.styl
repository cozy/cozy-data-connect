@require 'tools/mixins.styl'
@require 'settings/palette.styl'

:local // @stylint ignore
    h3
        font-size   rem(24)
        line-height 1.5em
        margin      .667em 0

    h4
        font-size   rem(20)
        line-height 1.5em
        margin      1em 0

    p
        font-size   rem(16)
        line-height rem(24)

    .col-account-connection
        display flex
        flex-direction column
        justify-content center

        .col-konnector-update
            width calc(90% - 1rem)
            align-self center
            max-width inherit

    @media (max-width: rem(400))
        h4
            font-size   rem(18)

        p
            font-size   rem(14)
