@require 'tools/mixins.styl'

:local // @stylint ignore
    h3
        font-size   (24/basefont)em
        line-height 1.5em
        margin      .667em 0

    h4
        font-size   (20/basefont)em
        line-height 1.5em
        margin      1em 0

    p
        font-size   (16/basefont)em
        line-height (24/basefont)em

    .col-account-connection-header
        margin 0 (16/basefont)em

        @media (max-width: (930/basefont)rem)
            width   100%

        svg
            max-height (48/basefont)em

    .col-account-connection-icon
        height 3em

    .col-account-connection-back
        height 2em
        display block
        float left
        margin-right 1em
        padding-top 1em

        svg
            height 1.5em
            width 1.5em

    @media (max-width: (400/basefont)rem)
        h4
            font-size   (18/basefont)em

        p
            font-size   (14/basefont)em

        .col-account-connection-icon
            height 2.5em
